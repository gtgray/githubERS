<resources>

    <style name="Theme.NoActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/clr_toolbar_background</item>
        <item name="colorPrimaryDark">@color/clr_statusbar_background</item>
        <item name="colorControlNormal">@color/clr_white</item>
    </style>

    <style name="Style.Toolbar" parent="Theme.NoActionbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Style.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/clr_white</item>
    </style>

</resources>
